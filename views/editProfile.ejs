<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <%- include("style.ejs") %>
</head>
<body>
    <%- include("navbar.ejs") %>
    <div class="profilePage">
        <div class="bgLight p30">
            <h1>Edit Profile</h1>
            <form action="/profile/me/edit" method="post">
                <label>Phone Number</label><br>
                <input type="text" name="phoneNumber" value="<%= profile.phoneNumber %>"><br>
                <label>Date of Birth</label><br>
                <input type="date" name="dateOfBirth" value="<%= profile.dateOfBirth.toISOString().split("T")[0] %>"><br>
                <label>Full Name</label><br>
                <input type="text" name="name" value="<%= profile.name %>"><br>
                <label>Nickname</label><br>
                <input type="text" name="nickName" value="<%= profile.nickName %>"><br>
                <label>Profile Picture</label><br>
                <input type="text" name="profilePicUrl" value="<%= profile.profilePicUrl %>"><br>
                <label>Bio</label><br>
                <textarea name="bio"><%= profile.bio %></textarea><br>
                <input type="submit" value="Submit">
            </form>
        </div>
        <div class="bgDark">

        </div>
    </div>
    
</body>
</html>