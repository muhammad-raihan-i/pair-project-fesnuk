<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Profile</title>
  <%- include("style.ejs") %>
  <style>
    .editProfilePage {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40px;
  padding: 40px 20px;
}

.editProfileCard, .editProfilePreview {
  flex: 1 1 400px;
  max-width: 500px;
  background-color: #fff;
  padding: 30px;
  border-radius: 14px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}

.editProfileCard h1, .editProfilePreview h2 {
  margin-bottom: 20px;
  color: #3b5998;
}

.editForm .formGroup {
  margin-bottom: 18px;
}

.editForm label {
  display: block;
  font-weight: 600;
  margin-bottom: 6px;
}

.editForm input[type="text"],
.editForm input[type="date"],
.editForm textarea {
  width: 100%;
  padding: 10px 12px;
  border-radius: 6px;
  border: 1px solid #ccc;
  font-size: 15px;
}

.editForm textarea {
  resize: vertical;
  height: 90px;
}

.submitWrapper {
  margin-top: 20px;
}

.editForm input[type="submit"] {
  width: 100%;
  background-color: #3b5998;
  color: white;
  font-weight: bold;
  padding: 12px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: 0.3s ease;
}

.editForm input[type="submit"]:hover {
  background-color: #2d4373;
}

.editProfilePreview {
  text-align: center;
  background-color: #dde5f2;
}

.editProfilePreview .previewImg {
  width: 180px;
  height: 180px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.nickname {
  color: #666;
  font-style: italic;
  margin-top: 5px;
}

.bio {
  margin-top: 12px;
}

  </style>
</head>
<body>
  <%- include("navbar.ejs") %>
  <div class="editProfilePage">
    <div class="editProfileCard">
      <h1>Edit Profile</h1>
      <form action="/profile/me/edit" method="post" class="editForm">
        <div class="formGroup">
          <label>Phone Number</label>
          <input type="text" name="phoneNumber" value="<%= profile.phoneNumber %>">
        </div>
        <div class="formGroup">
          <label>Date of Birth</label>
          <input type="date" name="dateOfBirth" value="<%= profile.dateOfBirth.toISOString().split('T')[0] %>">
        </div>
        <div class="formGroup">
          <label>Full Name</label>
          <input type="text" name="name" value="<%= profile.name %>">
        </div>
        <div class="formGroup">
          <label>Nickname</label>
          <input type="text" name="nickName" value="<%= profile.nickName %>">
        </div>
        <div class="formGroup">
          <label>Profile Picture</label>
          <input type="text" name="profilePicUrl" value="<%= profile.profilePicUrl %>">
        </div>
        <div class="formGroup">
          <label>Bio</label>
          <textarea name="bio"><%= profile.bio %></textarea>
        </div>
        <div class="submitWrapper">
          <input type="submit" value="Submit">
        </div>
      </form>
    </div>

    <div class="editProfilePreview">
      <h2>Profile Preview</h2>
      <img src="<%= profile.profilePicUrl %>" alt="Profile Picture" class="previewImg">
      <h3><%= profile.name %></h3>
      <p class="nickname">@<%= profile.nickName %></p>
      <p class="bio"><%= profile.bio %></p>
    </div>
  </div>
</body>

</html>
